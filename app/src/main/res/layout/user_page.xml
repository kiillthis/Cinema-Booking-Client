<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fon">

    <ImageView
        android:id="@+id/user_poster"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_daddy" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/user_poster"
        app:layout_constraintTop_toTopOf="@+id/user_poster"
        tools:text="User name" />

    <TextView
        android:id="@+id/user_telephone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/user_poster"
        app:layout_constraintTop_toTopOf="@+id/user_poster"
        tools:text="User telephone" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/user_poster"
        app:layout_constraintTop_toTopOf="@+id/user_poster"
        tools:text="User Email" />


    <TextView
        android:id="@+id/card_text"
        android:layout_width="106dp"
        android:layout_height="20dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Credit Card"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ticket"
        app:layout_constraintEnd_toStartOf="@+id/icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_email"
        app:layout_constraintVertical_bias="0.737" />

    <TextView
        android:id="@+id/ticket"
        android:layout_width="106dp"
        android:layout_height="18dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="321dp"
        android:text="Ticket"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_poster" />

    <TextView
        android:id="@+id/favorit_movie"
        android:layout_width="123dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Favorit"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_favorit"
        app:layout_constraintTop_toBottomOf="@+id/ticket" />

    <ImageView
        android:id="@+id/img_fav"
        android:layout_width="56dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_ticket"
        app:layout_constraintEnd_toStartOf="@+id/ticket"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_poster" />

    <ImageView
        android:id="@+id/img_card"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_credit_card_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/card_text"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_email" />

    <ImageView
        android:id="@+id/img_favorit"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_favorite_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_fav" />

    <Button
        android:id="@+id/logout"
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="392dp"
        android:background="#538755"
        android:text="Logout"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_email" />


</android.support.constraint.ConstraintLayout>